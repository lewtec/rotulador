{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "github>lewtec/renovate-config:base"],
  "lockFileMaintenance": {
    "enabled": false,
    "recreateWhen": "always",
    "automergeType": "pr",
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
